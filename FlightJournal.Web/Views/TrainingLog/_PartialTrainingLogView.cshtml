@model IEnumerable<FlightJournal.Web.Controllers.TrainingFlightWithSomeDetailsViewModel>

@if (Model.Any())
{

    <table class="table table-striped table-hover table-condensed" id="flightstable">
        <thead>
        <tr>
            <th>@_("Date")</th>
            <th>@_("Plane")</th>
            <th>@_("Front seat")</th>
            <th>@_("Back seat")</th>
            <th>@_("Airfield")</th>
            <th>@_("Duration")</th>
            <th>@_("Program")</th>
            <th>@_("Lesson")</th>
            <th>@_("Manouvres")</th>
            <th>@_("Annotations")</th>
            <th>@_("Note")</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var f in Model)
        {
            <tr data-flightid="@f.FlightId">
                <td data-flightid="@f.FlightId">@f.Timestamp</td>
                <td>@f.Plane</td>
                <td>@f.FrontSeatOccupant</td>
                <td>@f.BackSeatOccupant</td>
                <td>@f.Airfield</td>
                <td>@f.Duration</td>
                <td>@f.TrainingProgramName</td>
                <td>@f.PrimaryLessonName</td>
                <td>@Html.Raw(f.Manouvres)</td>
                <td>@Html.Raw(f.Annotations)</td>
                <td>@f.Note</td>
            </tr>
        }
        </tbody>
    </table>
}

