@model FlightJournal.Web.Models.Training.Predefined.CommentsInFlightPhasesViewModel

@{
    ViewBag.Title = _("Comments vs flight phases");
}

<h2>@_("Comments vs flight phases")</h2>
<hr />
<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            @foreach (var phase in Model.FlightPhaseNames)
            {
                <th>@phase</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var phase in Model.FlightPhaseNames)
        {
        <td>
            <select multiple class="selectpicker" data-selected-text-format="static" title="@_("Select the comments relevant for this flight phase")">
                @foreach (var c in Model.Comments[phase])
                {
                    var sel = c.UsedInPhase ? "selected" : "";
                    <option @sel>@Html.Raw(c.Name)</option>
                }
            </select>
        </td>
        }
    </tbody>

    </table>

    <div>
        @Html.Partial("_PartialBackToList")
    </div>

